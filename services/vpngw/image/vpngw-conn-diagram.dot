digraph VPNConnections {
  rankdir=LR;
  graph [fontsize=11, labelloc=t, label="Site-to-Site VPN: Nebius (Site A) ↔ GCP (Site B)\nConnections with Embedded IPsec Tunnel Details", fontname="Helvetica"];
  node  [shape=box, style=rounded, fontname="Helvetica"];
  edge  [fontname="Helvetica", arrowsize=0.7];

  // Left site: Nebius VPN Gateway with two public IPs
  subgraph cluster_site_nebius {
    label = "Site A: Nebius";
    style = rounded; color = gray50;

    nebius_gw  [label="Nebius VPN Gateway\nInstance: vpngw\nASN: 65010"];
    neb_if0[label="neb-if0\nPublic IP: 84.2.2.10"];
    neb_if1[label="neb-if1\nPublic IP: 84.2.2.11"];

    nebius_gw -> neb_if0 [arrowhead=none, style=dotted, label="address #1"];
    nebius_gw -> neb_if1 [arrowhead=none, style=dotted, label="address #2"];

    { rank=same; neb_if0; neb_if1 }
  }

  // Right site: GCP HA VPN
  subgraph cluster_site_gcp {
    label = "Site B: GCP";
    style = rounded; color = steelblue3;

    gcp_if0 [label="gcp-if0\nExternal IP: 35.1.1.1\nASN: 16550"];
    gcp_if1 [label="gcp-if1\nExternal IP: 35.1.1.2\nASN: 16550"];

    { rank=same; gcp_if0; gcp_if1 }
  }

  // Site-to-site connections (each edge encapsulates the Connection and its Tunnel)
  // Ensure left-to-right site order
  nebius_gw -> gcp_if0 [style=invis, weight=100];

  neb_if0 -> gcp_if0 [color=steelblue4,
    label="conn neb-if0 ↔ gcp-if0\nTunnel neb-if0↔gcp-if0 (IPsec)\nAPIPA 169.254.100.0/30  (Nebius .2 ↔ .1 GCP)\nIKEv2 AES256/SHA256  DPD 10/30\nBGP 16550 ↔ 65010  Advertise 10.10.0.0/16"];

  neb_if1 -> gcp_if1 [color=steelblue4,
    label="conn neb-if1 ↔ gcp-if1\nTunnel neb-if1↔gcp-if1 (IPsec)\nAPIPA 169.254.101.0/30  (Nebius .2 ↔ .1 GCP)\nIKEv2 AES256/SHA256  DPD 10/30\nBGP 16550 ↔ 65010  Advertise 10.10.0.0/16"];

  // Minimal legend for clarity
  legend [shape=note, fontsize=10,
    label="Site A = Nebius  |  Site B = GCP\nEach labeled edge represents one Connection, containing a single IPsec Tunnel.\nDotted lines show Nebius GW bound to its two public IPs."];
}
 
